<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="245px"
    android:layout_height="300px"
    android:gravity="center_horizontal" >

    <RelativeLayout
        android:layout_width="245px"
        android:layout_height="300px"
        android:background="@drawable/video_bg"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/preViewPic"
            android:layout_width="245px"
            android:layout_height="210px"
            android:background="@android:color/transparent"
            android:contentDescription="@string/contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/error_net_pic" />

        <TextView
            android:id="@+id/videoSetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/preViewPic"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:text="@string/yuWenBtn"
            android:textColor="#000000"
            android:textSize="20px" />

        <TextView
            android:id="@+id/totalVideoNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/preViewPic"
            android:layout_below="@+id/preViewPic"
            android:layout_marginRight="5dp"
            android:text="@string/yuWenBtn"
            android:textColor="#999999"
            android:layout_alignBottom="@+id/videoSetName"
            android:gravity="bottom"
            android:textSize="18px" />

        <TextView
            android:id="@+id/hasDownNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoSetName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="@string/yuWenBtn"
            android:textColor="#999999"
            android:textSize="18px" />

        <ProgressBar
            android:id="@+id/downNumProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/preViewPic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:max="100"
            android:progress="30" />
    </RelativeLayout>

</RelativeLayout>