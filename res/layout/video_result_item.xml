<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="208px"
    android:layout_height="265px"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="5dp" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_videoresult_item_icon"
            android:layout_width="200px"
            android:layout_height="190px"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="@string/contentDescription"
            android:scaleType="fitXY"
            android:src="@drawable/video_list_item_img" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_videoresult_item_videosetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/video_list_item_timebg"
                android:text="海淀视频" />

            <TextView
                android:id="@+id/iv_videoresult_item_requiretype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/video_list_item_timebg"
                android:gravity="right"
                android:text="必修一" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_videoresult_item_videoname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="再別康桥" />

    <LinearLayout
        android:id="@+id/layout_videoresult_item_videoinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_videoresult_item_teachername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_list_item_teacher" />

        <TextView
            android:id="@+id/tv_videoresult_item_teachervalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="林玉华" />
    </LinearLayout>

</LinearLayout>